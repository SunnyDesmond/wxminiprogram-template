/* pages/goodsInfo/goodsInfo.wxss */
.page-container{
    height: 100%;
}
.banner{
  width: 100%;
  height: 720rpx;
}
.banner swiper{
  height: 720rpx;
}
.banner swiper-item{
  height: 720rpx;
}
.banner  image{
  width: 100%;
  height: 720rpx;
}
.goods-info{
    padding: 45rpx;
    border-top: 1rpx solid #e5e5e5;
}
.goods-info .price-wrap{
  display: flex;
  align-items: center;

}
.goods-info .price-wrap .new{
  font-size: 38rpx;
  color: #000;
}
.goods-info .price-wrap .old{
  font-size: 28rpx;
  color: #777;
  text-decoration: line-through;
  margin-left: 20rpx;
}
.goods-info .desc{
  font-size: 30rpx;
  color: #333;
  line-height: 38rpx;
}
.tips{
  height: 60rpx;
  width: 100%;
  background-color: #f5f5f5;
  font-size: 30rpx;
  color: rgb(216, 93, 93);
  line-height: 60rpx;
  text-align: center;
}
.buy-btn{
  width: 300rpx;
  height: 100rpx;
  background: #ff4400;
  border-radius: 15rpx;
  color: #fff;
  font-size: 40rpx;
  text-align: center;
  line-height: 100rpx;
  margin: 65rpx auto 0;
}