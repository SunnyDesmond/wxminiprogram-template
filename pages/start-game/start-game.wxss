page {
  background: #240a54;
}

.coin {
  display: flex;
  justify-content: flex-end;
  margin-right: 40rpx;
  position: relative;
  top: 26rpx;
  margin-top: -20rpx;
}

.coin text {
  color: #fff;
  font-size: 28rpx;
  position: relative;
  right: 10rpx;
  top: 1rpx;
}

.coin image {
  width: 41rpx;
  height: 41rpx;
}

.start-game-bg {
  text-align: center;
}

.start-game-bg image {
  width: 397rpx;
  height: 472rpx;
  margin-right: 30rpx;
}

.tips-wrapper {
  display: flex;
  color: #fff;
  text-align: center;
}

.tips-left, .tips-right {
  width: 183rpx;
  height: 141rpx;
  background: #665486;
  border-radius: 19rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  margin: 0 auto;
}

.tips-middle-top {
  margin-top: 70rpx;
}

.tips-middle-top image {
  width: 46rpx;
  height: 117rpx;
}

.tips-middle-bottom {
  height: 63rpx;
  width: 258rpx;
  background: #665486;
  border-radius: 19rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 63rpx;
  margin: 30rpx auto;
  text-align: center;
}

.start-challenge button {
  width: 379rpx;
  height: 157rpx;
  background: url('https://img.jammyfm.com/media/image/songquiz_assets/start-game-challenge.png');
  background-size: cover;
  margin-top: 10rpx;
  position: relative;
  left: 5rpx;
}

.challenge-coin {
  height: 40rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 40rpx;
  text-align: center;
}

.challenge-type {
  display: flex;
  margin-top: 20rpx;
  text-align: center;
}

.challenge-type-try image {
  width: 132rpx;
  height: 132rpx;
}

.challenge-type-avatar image {
  width: 132rpx;
  height: 132rpx;
}

.challenge-type-buy image {
  width: 315rpx;
  height: 112rpx;
}

.challenge-type-avatar, .challenge-type-buy, .challenge-type-try {
  margin: 0 auto;
}

.challenge-type-avatar, .challenge-type-try {
  position: relative;
  top: -10rpx;
}

.idol-startgame-modal {
  position: fixed;
  left: 50%;
  top: 40%;
  width: 528rpx;
  height: 787rpx;
  background: url('http://jammyfm.oss-cn-qingdao.aliyuncs.com/media/image/songquiz_assets/start-game-coin-none.png') no-repeat;
  background-size: cover;
  transform: translate(-50%, -50%);
  z-index: 22;
}

.start-game-pocket {
  text-align: center;
  margin-top: 250rpx;
}

.start-game-pocket image {
  width: 165rpx;
  height: 155rpx;
}

.start-game-pocket-tips {
  width: 400rpx;
  font-size: 28rpx;
  font-weight: 400;
  letter-spacing: 2rpx;
  margin: 20rpx auto;
}

.start-game-pocket-btn {
  text-align: center;
}

.start-game-pocket-btn image {
  width: 309rpx;
  height: 83rpx;
}

.start-game-pocket-line {
  width: 477rpx;
  height: 2rpx;
  background: #efefef;
  margin: 0 auto;
}

.start-game-buy-tips {
  color: #bbb;
  text-align: center;
  font-size: 28rpx;
}

.buy-goods-loc {
  height: 79rpx;
  line-height: 79rpx;
}
