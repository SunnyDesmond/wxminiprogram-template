/**index.wxss**/
.pageHidden{
  display: none!important;
}

.container{
     background: url('https://img.jammyfm.com/media/image/songquiz_assets/index-main-bg.png');
    background-size: cover;
}
page {
 
}

.banner-wrapper {
    width: 100%;
    text-align: center;
}

.slide-image {
    width: 694rpx;
    height: 302rpx;
}

.top-wrapper {
    display: flex;
    justify-content: space-between;
    padding: 1rpx 40rpx;
}

.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.userinfo-avatar {
    display: flex;
}

.features {
    display: flex;
    text-align: center;
}

.userinfo-coin {
    display: flex;
    height: 50rpx;
    line-height: 57rpx;
}

.userinfo-avatar image {
    width: 106rpx;
    height: 106rpx;
    border-radius: 50%;
}

.coin-num {}

.coin-num image {
    width: 30rpx;
    height: 30rpx;
}

.coin-num text {
    font-size: 24rpx;
    position: relative;
    padding-left: 5rpx;
    top: -5rpx;
}

.coin-receive {
    font-size: 24rpx;
    font-weight: 400;
    color: rgba(255, 215, 101, 1);
    line-height: 33rpx;
    padding-top: 10rpx;
    padding-left: 10rpx;
    text-decoration: underline;
}

.userinfo-nickname {
    color: #aaa;
    padding-left: 10rpx;
    padding-top: 10rpx;
}

.nickname {
    width: 246rpx;
    height: 40rpx;
    font-size: 28rpx;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: #fff;
    line-height: 40rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.usermotto {
    margin-top: 200px;
}

.features-icon {
    padding-left: 20rpx;
}

.features-icon image {
    width: 58rpx;
    height: 58rpx;
    position: relative;
    top: 10rpx;
}

.features-icon view {
    font-size: 20rpx;
    color: #fff;
}

.content-wrapper {
    display: flex;
    flex-wrap: wrap;
    flex-shrink: 0;
    padding-bottom: 40rpx;
}

.detail {
    padding: 10rpx 1rpx;
    margin-left: 30rpx;
    margin-top: 20rpx;
    background: #fff;
    border-radius: 6rpx;
}

.detail image {
    width: 332rpx;
    height: 332rpx;
}

.commodity-name {
    width: 300rpx;
    height: 40rpx;
    font-size: 28rpx;
    font-family: PingFang-SC-Bold;
    font-weight: bold;
    color: rgba(0, 0, 0, 1);
    line-height: 40rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    padding-left: 16rpx;
}

.commodity-price {
    width: 57rpx;
    height: 33rpx;
    font-size: 24rpx;
    font-weight: 400;
    color: rgba(0, 0, 0, 1);
    line-height: 33rpx;
    position: relative;
    top: 5rpx;
}

.commodity-btn {
    display: flex;
    justify-content: space-between;
    margin-top: 20rpx;
    margin-bottom: 10rpx;
    padding: 1rpx 16rpx;
}

.commodity-btn-go button {
    width: 114rpx;
    height: 42rpx;
    background: linear-gradient(122deg, rgba(144, 104, 255, 1) 0%, rgba(116, 69, 235, 1) 100%);
    border-radius: 21rpx;
    color: #fff;
    font-size: 24rpx;
    line-height: 42rpx;
}

.swiper-btn {
    width: 694rpx;
    height: 100%;
    background: transparent
}

.swiper-btn image {
    width: 694rpx;
    height: 100%;
}

.idol-index-service {
    position: fixed;
    left: 50%;
    top: 40%;
    width: 571rpx;
    height: 730rpx;
    background: url('http://jammyfm.oss-cn-qingdao.aliyuncs.com/media/image/songquiz_assets/idol-index-checkService.png') no-repeat;
    background-size: cover;
    transform: translate(-50%, -50%);
    z-index: 22;
}

.idol-sign-close {
    position: fixed;
    left: 50%;
    top: 77%;
    transform: translate(-50%, -50%);
    z-index: 22;
}

.idol-sign-close image {
    width: 60rpx;
    height: 60rpx;
    background: rgba(202, 252, 234, 1);
    border-radius: 50%;
    margin: 20rpx auto;
}

.idol-index-service {
    text-align: center;
}

.idol-index-service-title {
    margin-top: 200rpx;
    height: 45rpx;
    font-size: 32rpx;
    font-weight: bold;
    color: rgba(57, 57, 57, 1);
    line-height: 45rpx;
    margin-bottom: 40rpx;
}

.idol-index-service-tips {
    font-size: 28rpx;
    font-weight: 400;
    color: rgba(74, 74, 74, 1);
    line-height: 40rpx;
}

.idol-index-service button {
    width: 268rpx;
    height: 93rpx;
    margin-top: 40rpx;
    background: url('https://img.jammyfm.com/media/image/songquiz_assets/idol-index-askservice.png') no-repeat;
    background-size: cover;
}
.back-to-top{
  position: fixed;
  bottom: 100rpx;
  right: 10rpx;
}
.back-to-top image{
  width: 110rpx;
  height: 100rpx;
}

.invite-entry{
  position: fixed;
  width: 110rpx;
  height: 110rpx;
  bottom: 120rpx;
  right: 20rpx;
  background: url('https://img.jammyfm.com/media/image/songquiz_assets/mxtkgo/distribution/invite-entry.png') no-repeat center center/contain;
}


.layer-mask{
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 10000;
  background: url('https://img.jammyfm.com/media/image/songquiz_assets/kqcb/go-reply-bg.png') no-repeat center center/contain;
}


.layer-mask button{
  width:100%;
  height: 100%;
  z-index: 10;
  position: absolute;
  background: none;
}
