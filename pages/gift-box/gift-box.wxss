/* pages/gift-box/gift-box.wxss */

page {
    background: #240a54;
}

.gift-wrapper {
    display: flex;
    margin: 20rpx 28rpx;
    padding-bottom: 10rpx;
    border-bottom: 1px solid #5B5468;
}

.gift-avatar {
    position: relative;
}

.gift-avatar image {
    width: 117rpx;
    height: 118rpx;
    border-radius: 4rpx;
}

.gift-avatar-modal {
    width: 117rpx;
    height: 118rpx;
    background: rgba(0, 0, 0, 0.6);
    position: absolute;
    top: 0;
    color: #fff;
    font-size: 28rpx;
    text-align: center;
    line-height: 118rpx;
}

.gift-desc {
    color: #fff;
    margin-left: 20rpx;
    margin-top: 15rpx;
}

.gift-name {
    width: 434rpx;
    height: 45rpx;
    font-size: 32rpx;
    font-weight: bold;
    color: rgba(255, 255, 255, 1);
    line-height: 45rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow:ellipsis;
}

.gift-detail {
    width: 426rpx;
    height: 33rpx;
    font-size: 24rpx;
    font-weight: 400;
    color: rgba(255, 255, 255, 1);
    line-height: 33rpx;
    margin-top: 10rpx;
}

.gift-box-none {
    text-align: center;
    margin-top: 237rpx;
}

.gift-box-none image {
    width: 409rpx;
    height: 341rpx;
}

.gift-box-btn {
    text-align: center;
    margin-top: 90rpx;
}

.gift-box-btn image {
    width: 268rpx;
    height: 93rpx;
}