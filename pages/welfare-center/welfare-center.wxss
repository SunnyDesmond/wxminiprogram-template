/* pages/welfare-center/welfare-center.wxss */

@import '/vendor/animate.min.wxss';
page {
    background: url('https://img.jammyfm.com/media/image/songquiz_assets/idol-index-bg.png');
    background-size: cover;
}

.top-wrapper {
    display: flex;
    padding: 10rpx 40rpx;
}

.idol-welfare-coin image {
    width: 108rpx;
    height: 108rpx;
}

.idol-welfare-coinNum {
    padding-left: 16rpx;
    margin-top: 10rpx;
}

.coin-num {
    width: 144rpx;
    height: 45rpx;
    font-size: 32rpx;
    font-weight: 400;
    color: rgba(255, 255, 255, 1);
    line-height: 45rpx;
}

.coin-tips {
    width: 384rpx;
    height: 33rpx;
    font-size: 24rpx;
    font-weight: 400;
    color: rgba(161, 183, 255, 1);
    line-height: 33rpx;
    margin-top: 10rpx;
}

.detail-wrapper {
    width: 96%;
    background: #fff;
    height: 144rpx;
    display: flex;
    justify-content: space-between;
    margin-top: 40rpx;
    margin-left: 2%;
    border-radius: 6rpx;
}

.detail-wrapper-left {
    display: flex;
}

.detail-wrapper-left-tips {
    margin-top: 22rpx;
    margin-left: 22rpx;
}

.daily-sign {
    width: 128rpx;
    height: 45rpx;
    font-size: 32rpx;
    font-weight: bold;
    color: rgba(0, 66, 123, 1);
    line-height: 45rpx;
}

.daily-sign-tips {
    width: 345rpx;
    height: 48rpx;
    font-size: 20rpx;
    font-weight: 400;
    color: rgba(109, 109, 109, 1);
    line-height: 24rpx;
    margin-top: 10rpx;
}

.daily-sign-tips text {
    font-size: 20rpx;
    font-weight: 400;
    color: rgba(253, 120, 145, 1);
    line-height: 24rpx;
}

.detail-wrapper-left-img {
    line-height: 144rpx;
    margin-left: 20rpx;
}

.detail-wrapper-left-img image {
    width: 94rpx;
    height: 94rpx;
    vertical-align: middle;
}

.detail-wrapper-right {}

.detail-wrapper-right button {
    width: 176rpx;
    height: 62rpx;
    background: url('https://img.jammyfm.com/media/image/songquiz_assets/idol-welfare-btn.png') no-repeat;
    background-size: cover;
    line-height: 62rpx;
    font-size: 28rpx;
    color: #fff;
    position: relative;
    top: 42rpx;
    right: 20rpx;
    /* margin-top: 42rpx;
    margin-right: 20rpx; */
}

.idol-sign-close {
    position: fixed;
    left: 50%;
    top: 78%;
    transform: translate(-50%, -50%);
    z-index: 22;
}

.idol-sign-close image {
    width: 60rpx;
    height: 60rpx;
    background: rgba(202, 252, 234, 1);
    border-radius: 50%;
    margin: 20rpx auto;
}

.idol-index-gif {
    position: fixed;
    left: 50%;
    top: 45%;
    transform: translate(-50%, -50%);
    z-index: 23;
}

.idol-index-gif image {
    width: 584rpx;
    height: 470rpx;
}

.idol-index-gif view {
    position: fixed;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    z-index: 22;
    color: yellow;
}

.idol-index-gif-num {
    font-size: 70rpx;
    top: 42% !important;
    z-index: 23;
}
.idol-index-gif-num text{
    font-size: 40rpx;
    position: relative;
    left: 10rpx;
    top: -3rpx;
}

.idol-index-gif-fail {
    position: fixed;
    left: 50%;
    top: 40%;
    transform: translate(-50%, -50%);
    z-index: 22;
}

.idol-index-gif-fail image {
    width: 484rpx;
    height: 300rpx;
}

.idol-index-gif-fail-tips {
    text-align: center;
    margin-top: 30rpx;
}

.idol-index-gif-fail-tips view {
    height: 45rpx;
    font-size: 32rpx;
    font-weight: 400;
    color: rgba(255, 255, 255, 1);
    line-height: 45rpx;
}

.service-more {
    height: 32rpx;
    font-size: 24rpx;
    font-weight: 400;
    color: rgba(255, 255, 255, 1);
    line-height: 32rpx;
    text-decoration: underline;
    text-align: center;
    margin-top: 30rpx;
}

.idol-index-raider {
    position: fixed;
    left: 50%;
    top: 40%;
    width: 571rpx;
    height: 580rpx;
    background: url('http://jammyfm.oss-cn-qingdao.aliyuncs.com/media/image/songquiz_assets/idol-index-raider.png') no-repeat;
    background-size: cover;
    transform: translate(-50%, -50%);
    z-index: 22;
    text-align: center;
}

.idol-index-raider button {
    width: 269rpx;
    height: 91rpx;
    background: url('http://jammyfm.oss-cn-qingdao.aliyuncs.com/media/image/songquiz_assets/welfare-btn-receive.png');
    background-size: cover;
}

.idol-index-service {
    position: fixed;
    left: 50%;
    top: 40%;
    width: 571rpx;
    height: 580rpx;
    background: url('http://jammyfm.oss-cn-qingdao.aliyuncs.com/media/image/songquiz_assets/idol-index-raider.png') no-repeat;
    background-size: cover;
    transform: translate(-50%, -50%);
    z-index: 22;
    text-align: center;
}

.idol-index-service button {
    width: 269rpx;
    height: 91rpx;
    background: url('http://jammyfm.oss-cn-qingdao.aliyuncs.com/media/image/songquiz_assets/welf-btn-advisory.png');
    background-size: cover;
}

.idol-index-raider-close {
    top: 68% !important;
}

.modal-tips {
    width: 571rpx;
    height: 400rpx;
    font-size: 38rpx;
    color: #3e8ef8;
    font-weight: 500;
    line-height: 490rpx;
}

.modal-btn-tips {
    width: 269rpx;
    height: 91rpx;
    margin: 0 auto;
}